<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extension-examples">
    <schema id="org.gnome.shell.extensions.gnome4synology" path="/org/gnome/shell/extensions/gnome4synology/">
    <key type="s" name="url">
      <default>'discstation:5000'</default>
      <summary>URL of Synology® NAS eg 'discstation:5000'</summary>
      <description/>
    </key>
    <key type="s" name="user">
      <default>'admin'</default>
      <summary>User on Synology® NAS eg 'admin'</summary>
      <description/>
    </key>
    <key type="s" name="password">
      <default>'admin'</default>
      <summary>Password on Synology® NAS eg 'admin'</summary>
      <description/>
    </key>
    <key type="i" name="limit">
      <default>5</default>
      <summary>Limit the number of movies returned</summary>
      <description/>
    </key>
    <key type="b" name="additional">
      <default>false</default>
      <summary>Are additional movie infos shown as search result (slower searches)?</summary>
      <description/>
    </key>
    <key type="i" name="poster-size">
      <default>16</default>
      <summary>Poster size of movie result items</summary>
      <description/>
    </key>
    <key type="b" name="debug">
      <default>false</default>
      <summary>Are debug messages shown as search result?</summary>
      <description/>
    </key>
  </schema>
</schemalist>
